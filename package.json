{
  "name": "akroma",
  "version": "0.0.5",
  "description": "Akroma Desktop Wallet",
  "homepage": "https://github.com/akroma-project/akroma-wallet-desktop",
  "author": {
    "name": "Ian DesJardins",
    "email": "ian.desjardins@akroma.io"
  },
  "keywords": [
    "angular",
    "angular 6",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "unit": "mocha --require ts-node/register test/**/*.ts",
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "start": "yarn lint && node hooks/environments/set_profile.js && npm-run-all -p ng:serve electron:serve",
    "build": "yarn lint && node hooks/environments/set_profile.js && ng build && npm run electron:tsc",
    "build:prod": "yarn lint && node hooks/environments/set_profile.js && ng build --prod && npm run electron:tsc",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "release": "npm run build:prod && electron-builder build",
    "release:all": "npm run build:prod && npx electron-builder build -mwl -p always",
    "release:win": "cross-env NODE_ENV=production ENV=prod npm run build:prod && npx electron-builder build --win -p always",
    "release:mac": "cross-env NODE_ENV=production ENV=prod npm run build:prod && npx electron-builder build --mac -p always",
    "release:linux": "cross-env NODE_ENV=production ENV=prod npm run build:prod && npx electron-builder build --linux -p always",
    "test": "karma start ./karma.conf.js",
    "pree2e:build": "webdriver-manager update --gecko false && npm run ng serve",
    "pree2e:protractor": "wait-on http-get://localhost:4200/ && protractor ./protractor.conf.js",
    "e2e": "npm-run-all -p -r pree2e:build pree2e:protractor"
  },
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "crypto-browserify": "^3.12.0",
    "fs-extra": "^5.0.0",
    "install": "^0.11.0",
    "ng2-dragula": "2.1.0",
    "ng2-search-filter": "^0.4.7",
    "ngx-bootstrap": "^2.0.5",
    "ngx-pagination": "^3.1.1",
    "ngx-qrcode2": "0.0.9",
    "node-pre-gyp": "^0.10.0",
    "npm": "^6.0.1",
    "pg": "^7.4.3",
    "pouchdb": "^6.4.3",
    "pouchdb-adapter-node-websql": "^6.4.3",
    "pouchdb-browser": "^6.4.3",
    "pouchdb-find": "6.4.3",
    "pouchdb-upsert": "^2.2.0",
    "request": "^2.85.0",
    "rxjs-compat": "6.0.0-tactical-rc.1",
    "web3": "^1.0.0-beta.35",
    "websocket": "^1.0.26",
    "websql": "^0.4.4"
  },
  "devDependencies": {
    "@angular/cli": "1.7.4",
    "@angular/common": "6.1.7",
    "@angular/compiler": "6.1.7",
    "@angular/compiler-cli": "6.1.7",
    "@angular/core": "6.1.7",
    "@angular/forms": "6.1.7",
    "@angular/http": "6.1.7",
    "@angular/language-service": "6.1.7",
    "@angular/platform-browser": "6.1.7",
    "@angular/platform-browser-dynamic": "6.1.7",
    "@angular/router": "6.1.7",
    "@ngx-translate/core": "9.1.1",
    "@ngx-translate/http-loader": "2.0.1",
    "@types/chai": "^4.1.4",
    "@types/core-js": "0.9.36",
    "@types/node": "7.0.7",
    "@types/pg": "^7.4.10",
    "@types/pouchdb": "^6.3.2",
    "@types/pouchdb-browser": "^6.1.2",
    "@types/pouchdb-core": "^6.4.2",
    "@types/pouchdb-upsert": "^2.2.4",
    "chai": "^4.1.2",
    "codelyzer": "4.2.1",
    "core-js": "2.5.5",
    "cross-env": "5.1.4",
    "dotenv": "5.0.1",
    "electron": "2.0.9",
    "electron-builder": "20.28.4",
    "electron-reload": "^1.2.5",
    "npm-run-all": "4.1.2",
    "npx": "10.0.1",
    "protractor": "5.3.1",
    "replace": "0.3.0",
    "rxjs": "6.3.2",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "<=2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
